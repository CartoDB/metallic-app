{
  "name": "metallic-app",
  "version": "0.2.1",
  "description": "Koa application for CARTO services",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CartoDB/metallic-app.git"
  },
  "keywords": [
    "koa",
    "application",
    "metallic"
  ],
  "author": "Daniel Garc√≠a Aubert <dgaubert@carto.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/CartoDB/metallic-app/issues"
  },
  "homepage": "https://github.com/CartoDB/metallic-app#readme",
  "engines": {
    "node": ">=7.6.0"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "koa": "^2.2.0",
    "metallic-errors": "^0.1.1",
    "metallic-interfaces": "^0.1.0",
    "node-uuid": "^1.4.8"
  },
  "scripts": {
    "build": "babel src -d lib --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "coverage": "istanbul cover _mocha lib/test/ -- --recursive",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\"",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "preversion": "npm test",
    "test": "mocha --recursive -r babel-register -r source-map-support/register test",
    "test:watch": "npm run test -- -w"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "istanbul": "^0.4.5",
    "metallic-listeners": "^0.1.0",
    "metallic-logger": "^0.3.3",
    "metallic-metrics": "^0.2.0",
    "mocha": "^3.2.0",
    "sinon": "^2.1.0",
    "source-map-support": "^0.4.14",
    "standard": "^9.0.2"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
